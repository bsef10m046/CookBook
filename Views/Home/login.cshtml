    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function my() {
            if (!(document.passwordsignup.value === document.passwordsignup_confirm.value)) {
                document.write("password do not matches");
            }
            document.write(document.passwordsignup.value);
        }
    </script>

</head>
    <body style="background-image: url(../Images/bg-img2.jpg)" >
        <div class="container">
            <!-- Codrops top bar -->
            
            
            <section>				
                <div id="container_demo" >
                    <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                    <a class="hiddenanchor" id="toregister"></a>
                    <a class="hiddenanchor" id="tologin"></a>
                    <div id="wrapper">
                        <div id="login" class="animate form">
                            <form  action="../Home/login1" method="Post"> 
                                <h1>Log in</h1> 
                                <p> 
                                    <br /><br /><br /><br />
                                    <label for="username" class="uname" data-icon="u" > Your username </label>
                                    @Html.TextBoxFor(Model => Model.Name)
                                    @Html.ValidationMessageFor(Model => Model.Name)
                                </p>
                                <p> 
                                    <label for="password" class="youpasswd" data-icon="p"> Your password </label>
                                     @Html.PasswordFor(Model => Model.Password)
                                    @Html.ValidationMessageFor(Model => Model.Password)
                                </p>
                               <!-- <script type="text/javascript">
                                    function getURLParameter(name) {
  return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search)||[,""])[1].replace(/\+/g, '%20'));
}
                                 myvar = getURLParameter('error');
                                 document.write(myvar);

                                </script>-->
                                @if (ViewBag.x != null)
                                {
                                        <div>@ViewBag.x</div>
                                }
                                <p class="login button"> 
                                    <input type="submit" value="Login" />
								</p>
                                <p class="change_link">
									Not a member yet ?
									<a href="#toregister" class="to_register">Join us</a>
								</p>
                            </form>
                        </div>
                        
                        <div id="register" class="animate form" >
                            <form  action="SIGNUP"  method="Post"> 
                                <h1> Sign up </h1> <br>
                                <p> 
                                     <br /><br /><br /><br /><br />
                                    <label for="usernamesignup" class="uname" data-icon="u">Your username</label>
                                     @Html.TextBoxFor(Model => Model.Name, new { id = "usernamesignup" })
                                </p>
                                <p  class="signin button"> 
                                    <input type="button" value="check" id="b1" />
								</p>
                                 <div id="result"></div>
                                <br />
                                <br />
                                <p> 
                                    <label for="emailsignup" class="youmail" data-icon="e" > Your email</label>
                                      @Html.TextBoxFor(Model => Model.Email)
                                   
                                </p>
                                <p> 
                                    <label for="passwordsignup" class="youpasswd" data-icon="p">Your password </label>
                                     @Html.PasswordFor(Model => Model.Password)
                                    @Html.ValidationMessageFor(Model => Model.Password)
                                </p>
                                <p> 
                                    <label for="passwordsignup_confirm" class="youpasswd" data-icon="p">Please confirm your password </label>
                                     
                                    <input id="passwordsignup_confirm" name="passwordsignup_confirm"  type="password" placeholder="eg. X8df!90EO"/>
                                </p>
                                
                                <p class="signin button"> 
									<input type="submit"  onclick="my()" value="Sign up"/> 
								</p>
                                @if (ViewBag.x != null)
                                {
                                        <div>@ViewBag.y</div>
                                }
                                <p class="change_link">  
									Already a member ?
									<a href="#tologin" class="to_register"> Go and log in </a>
								</p>
                            </form>
                            @Scripts.Render("~/bundles/jquery")
    <script>
        $(document).ready(function () {

            $('#b1').click(function () {

                var userName = $('#usernamesignup').val();

                //alert('User Name ='+ userName);

                $.getJSON("/Home/CheckUserName?UserName=" + userName, function (data) {

                    if (data) {
                        $('#result').text("User already exists in database");

                    }
                    else {
                        $('#result').text("User Name is available");
                    }
                });

            });

        });
       
    </script>
                        </div>
						
                    </div>
                </div>  
            </section>
        </div>
    </body>
</html>
